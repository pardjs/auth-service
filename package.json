{
  "name": "@pardjs/users-service-server",
  "version": "1.0.0",
  "description": "Nest TypeScript starter repository",
  "license": "MIT",
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "ts-node -r tsconfig-paths/register src/main.ts",
    "start:dev": "cd ./docker && docker-compose -f ./postgres.docker-compose.yml up -d && cd .. && nodemon",
    "stop:dev": "cd ./docker && docker-compose -f ./postgres.docker-compose.yml down && cd ..",
    "start:debug": "nodemon --config nodemon-debug.json",
    "prestart:prod": "rimraf dist && npm run build",
    "start:prod": "node dist/main.js",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "gen-db-migration": "ts-node ./node_modules/typeorm/cli.js  migration:generate -n",
    "migrate-db": "ts-node ./node_modules/typeorm/cli.js migration:run"
  },
  "dependencies": {
    "@nestjs/common": "^6.1.0",
    "@nestjs/core": "^6.1.0",
    "@nestjs/jwt": "^6.0.0",
    "@nestjs/microservices": "^6.1.0",
    "@nestjs/passport": "^6.0.0",
    "@nestjs/platform-express": "^6.1.0",
    "@nestjs/swagger": "^3.0.2",
    "@nestjs/typeorm": "^6.0.0",
    "@nestjs/websockets": "^6.1.0",
    "@pardjs/common": "1.0.2",
    "@pardjs/users-service-common": "^0.0.2",
    "cookie-parser": "^1.4.4",
    "lodash": "^4.17.11",
    "passport": "^0.4.0",
    "passport-jwt": "^4.0.0",
    "pg": "^7.9.0",
    "reflect-metadata": "0.1.13",
    "rimraf": "2.6.3",
    "rxjs": "6.4.0",
    "swagger-ui-express": "^4.0.2"
  },
  "devDependencies": {
    "@nestjs/testing": "6.1.0",
    "@types/express": "4.16.1",
    "@types/jest": "24.0.11",
    "@types/lodash": "^4.14.123",
    "@types/node": "11.13.0",
    "@types/supertest": "2.0.7",
    "jest": "24.7.1",
    "nodemon": "1.18.10",
    "prettier": "1.16.4",
    "supertest": "4.0.2",
    "ts-jest": "24.0.2",
    "ts-node": "8.0.3",
    "tsconfig-paths": "3.8.0",
    "tslint": "5.15.0",
    "typescript": "3.4.2",
    "yarn": "^1.15.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
